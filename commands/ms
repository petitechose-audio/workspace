#!/usr/bin/env bash

set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
WORKSPACE_ROOT="$(cd "$SCRIPT_DIR/.." && pwd)"

export WORKSPACE_ROOT

cd "$WORKSPACE_ROOT"

if ! command -v uv >/dev/null 2>&1; then
  echo "error: uv not found in PATH" >&2
  echo "install: https://docs.astral.sh/uv/" >&2
  exit 2
fi

exec uv run ms "$@"
